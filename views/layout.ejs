<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Page title -->
  <title><%= title %></title>

  <!-- Icon -->
  <link rel="icon" type="image/x-icon" href="/image/brand-logo.png">

  <!-- Noty CDN for CSS and script -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css">
  
  <!-- jQuery CDN -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>

  <!-- Font Awesome link -->
  <script src="https://kit.fontawesome.com/9c250245e3.js" crossorigin="anonymous"></script>

  <!-- Bootstrap link -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">

  <!-- Inline styling -->
  <style>
    body {
      background-color: #f5f5f5;
      font-family: 'Helvetica', sans-serif;
      color: #333;
    }

    .container-fluid {
      padding: 0;
      margin: 0;
    }

    /* Navbar styling */
    .navbar {
      background-color: #4CAF50; /* Green */
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .navbar-brand {
      font-weight: bold;
      color: #fff;
    }

    .navbar-toggler-icon {
      background-color: #fff;
    }

    .navbar-nav {
      margin-left: auto;
    }

    .nav-link {
      color: #fff;
    }

    .nav-link:hover {
      color: #ffd700; /* Gold */
    }

    /* Noty notification styling */
    .noty_theme__relax {
      border-radius: 5px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    /* Footer styling */
    footer {
      background-color: #4CAF50; /* Green */
      color: #fff;
      text-align: center;
      padding: 10px;
      position: fixed;
      bottom: 0;
      width: 100%;
    }
  </style>
</head>

<body class="container-fluid">
  <!-- Navbar of the page -->
  <nav class="navbar navbar-expand-lg shadow" style="background-color: #4CAF50"> <!-- Green -->
    <div class="container-fluid">
      <a class="navbar-brand fw-bold" href="/">
        <img src="/image/brand-logo.png" alt="Logo" width="32" height="32" class="d-inline-block align-text-top">
        Amazon Employees Feedback Management Dashboard
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0 fw-semibold">
          <% if(locals.user) { %> <% if( user.role.toString() == 'Admin' ) { %>
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/dashboard/admin">
                <i class="fa-solid fa-house"></i> Home
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/dashboard/admin/addEmployee">
                <i class="fa-solid fa-user-plus"></i> Add Employee
              </a>
            </li>
          <% } else { %>
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/dashboard/employee">
                <i class="fa-solid fa-house"></i> Home
              </a>
            </li>
          <% } %> <% } %>
        </ul>
        <div class="navbar-nav fw-semibold">
          <% if(locals.user) { %>
            <a class="nav-link active" aria-current="page" href="#">
              <i class="fa-solid fa-user"></i> <%= user.role %>
            </a>    
            <a class="nav-link" href="/signout">
              <i class="fa-solid fa-right-from-bracket"></i> Logout
            </a>
          <% } %>
        </div>
      </div>
    </div>
  </nav>

  <!-- Body content -->
  <%- body %> 

  <!-- Individual page script -->
  <%- script %>

  <script>
    // Noty notification script
    <% if (flash.success && flash.success.length > 0) { %> 
      new Noty({
        theme: 'relax',
        text: '<%= flash.success %>',
        type: 'success',
        layout: 'topRight',
        timeout: 1500
      }).show();
    <% } %>

    <% if (flash.error && flash.error.length > 0) { %> 
      new Noty({
        theme: 'relax',
        text: '<%= flash.error %>',
        type: 'error',
        layout: 'topRight',
        timeout: 1500
      }).show();
    <% } %>
  </script>

  <!-- Bootstrap script -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>

  <!-- Footer -->
  <footer>
    &copy; 2024 Amazon. All rights reserved.
  </footer>
</body>
</html>
