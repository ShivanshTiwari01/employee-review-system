<!-- Login Page -->

<div class="container-fluid">
  <div class="row justify-content-center align-items-center min-vh-100">
    <form action="/create-session" method="POST" class="col-12 col-md-6 col-lg-4 p-4 m-4 shadow rounded bg-light-green">
      <!-- Heading -->
      <div class="text-center mb-4">
        <h1 class="text-dark-green">Login</h1>
      </div>

      <!-- Email Input -->
      <div class="mb-3">
        <label for="email" class="form-label">Email Address</label>
        <input type="email" class="form-control" name="email" id="email" required>
      </div>

      <!-- Password Input -->
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control" name="password" id="password" required>
      </div>

      <!-- Submit Button -->
      <button type="submit" class="btn btn-dark-green w-100">Login</button>

      <!-- Sign Up Link -->
      <div class="text-center mt-3">
        <p>
          Don't have an account?
          <a href="/sign-up" class="text-dark-green">Sign Up</a> instead.
        </p>
      </div>
    </form>
  </div>
</div>
