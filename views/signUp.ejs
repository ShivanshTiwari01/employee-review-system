<!-- Sign Up Form -->

<div class="container-fluid">
  <div class="row justify-content-center align-items-center min-vh-100">
    <form action="/create-account" method="POST" class="col-12 col-md-6 col-lg-4 p-4 mt-4 shadow rounded bg-light-orange">
      <!-- Heading -->
      <div class="text-center mb-4">
        <h1 class="text-dark-orange">Sign Up</h1>
      </div>

      <!-- Name Input -->
      <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" name="name" id="name" required>
      </div>

      <!-- Email Input -->
      <div class="mb-3">
        <label for="email" class="form-label">Email Address</label>
        <input type="email" class="form-control" name="email" id="email" required>
      </div>

      <!-- Role Dropdown -->
      <div class="mb-3">
        <label for="role" class="form-label">Role</label>
        <select class="form-select" name="role" aria-label="Default select example">
          <option value="Employee">Employee</option>
          <option value="Admin">Admin</option>
        </select>
      </div>

      <!-- Password Input -->
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control" name="password" id="password" required>
      </div>

      <!-- Confirm Password Input -->
      <div class="mb-3">
        <label for="cnf_password" class="form-label">Confirm Password</label>
        <input type="password" class="form-control" name="cnf_password" id="cnf_password" required>
      </div>

      <!-- Submit Button -->
      <button type="submit" class="btn btn-dark-orange w-100">Sign Up</button>

      <!-- Login Page Link -->
      <div class="text-center mt-3">
        <p>
          Already have an account?
          <a href="/" class="text-dark-orange">Sign In</a> instead.
        </p>
      </div>
    </form>
  </div>
</div>
